<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Toxin | UI Kit
  body.page.ui

    include ../components/field/field.pug
    include ../components/checkbox/checkbox.pug
    include ../components/radio/radio.pug
    include ../components/toggle/toggle.pug
    include ../components/like/like.pug
    include ../components/bullet/bullet.pug
    include ../components/rate/rate.pug
    include ../components/button/button.pug
    include ../components/comment/comment.pug

    .form-elements
      .ui__column
        .ui__container
          .ui__label
            .h3 Text field
            .default Default
          +field()(type='text' placeholder='Email')
        .ui__container
          .ui__label
            .h3 Text field
            .default Hover/Focus
          +field()(type='text' placeholder='Email')
        .ui__container
          .ui__label
            .h3 Dropdown
            .default Default
          +field('dropdown')(type='text' placeholder='Сколько гостей')
        .ui__container
          .ui__label
            .h3 Masked text field
            .default Default
          +field()(type='text' placeholder='ДД.ММ.ГГГГ')
        .ui__container.ui__row
          .ui__date
            .ui__label
              .h3 Date Dropdown
            +field('date')(type='text' placeholder='ДД.ММ.ГГГГ')
          .ui__date
            .ui__label
              .h3 Date Dropdown
            +field('date')(type='text' placeholder='ДД.ММ.ГГГГ')
      .ui__column.ui__column_small
        .ui__container
          .ui__label
            .h3 Filter Date Dropdown
            .default Default
          +field('date')(type='text' placeholder='ДД.МММ - ДД.МММ')
        .ui__container
          .ui__label
            .h3 Subscibtion Text Field
            .default Default
          +field('subscribe')(type='text' placeholder='Email')
      .ui__column
        +checkbox('Можно курить')
        +checkbox('Широкий коридор','Ширина коридоров в номере не менее 91 см')
        +radio('Мужчина')(name='sex')
        +radio('Женщина')(name='sex')
        +toggle('Получать уведомления')
        +toggle('Получать спецпредложения')
        +like('2')
        +like('12')(checked=true)
        +rate('5')
        +rate('4')
        +bullet('Нельзя с питомцами')
        +bullet('Без вечеринок и мероприятий')
        +button('clear')
        +button('apply','apply')
        +button('sign up', 'signup')
        +button('sign in', 'signin')
        +button('sign up', 'signup')(disabled)
        +button('sign in', 'signin')(disabled)
        +button('order','order')
        +comment({author: 'Мурад Сарафанов',
                  date: '5 дней назад',
                  text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
                  likes: '2',
                  avatar:require('../components/comment/Avatar1.png').default})