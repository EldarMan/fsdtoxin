<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Toxin | UI Kit
  body.page.ui

    include ../components/field/field.pug
    include ../components/checkbox/checkbox.pug
    include ../components/radio/radio.pug
    include ../components/toggle/toggle.pug
    include ../components/like/like.pug
    include ../components/bullet/bullet.pug
    include ../components/rate/rate.pug
    include ../components/button/button.pug
    include ../components/comment/comment.pug
    include ../components/advantage/advantage.pug
    include ../components/linkList/linkList.pug

    .form-elements
      .ui__column
        .ui__container
          .ui__label
            .h3 Text field
            .default Default
          +field({})(type='text' placeholder='Email')
        .ui__container
          .ui__label
            .h3 Text field
            .default Hover/Focus
          +field({})(type='text' placeholder='Email')
        .ui__container
          .ui__label
            .h3 Dropdown
            .default Default
          +field({modifier:'dropdown'})(type='text' placeholder='Сколько гостей')
        .ui__container
          .ui__label
            .h3 Masked text field
            .default Default
          +field({})(type='text' placeholder='ДД.ММ.ГГГГ')
        .ui__container.ui__row
          .ui__date
            .ui__label
              .h3 Date Dropdown
            +field({modifier: 'date'})(type='text' placeholder='ДД.ММ.ГГГГ')
          .ui__date
            .ui__label
              .h3 Date Dropdown
            +field({modifier: 'date'})(type='text' placeholder='ДД.ММ.ГГГГ')
      .ui__column.ui__column_small
        .ui__container
          .ui__label
            .h3 Filter Date Dropdown
            .default Default
          +field({modifier: 'date'})(type='text' placeholder='ДД.МММ - ДД.МММ')
        .ui__container
          .ui__label
            .h3 Subscibtion Text Field
            .default Default
          +field({modifier: 'subscribe'})(type='text' placeholder='Email')
      .ui__column
        +checkbox({label:'Можно курить'})
        +checkbox({label:'Широкий коридор',text:'Ширина коридоров в номере не менее 91 см'})
        +radio({label:'Мужчина'})(name='sex')
        +radio({label:'Женщина'})(name='sex')
        +toggle({label:'Получать уведомления'})
        +toggle({label:'Получать спецпредложения'})
        +like({num:'2'})
        +like({num:'12'})(checked=true)
        +rate({num:'5'})
        +rate({num:'4'})
        +bullet({label:'Нельзя с питомцами'})
        +bullet({label:'Без вечеринок и мероприятий'})
        +button({label:'clear'})
        +button({label:'apply',modifier:'apply'})
        +button({label:'sign up', modifier: 'signup'})
        +button({label:'sign in', modifier: 'signin'})
        +button({lavel:'sign up', modifier: 'signup'})
        +button({label:'sign in', modifier: 'signin'})
        +button({label:'order', modifier: 'order'})
        +comment({author: 'Мурад Сарафанов',
                  date: '5 дней назад',
                  text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
                  likes: '2',
                  avatar:require('../components/comment/Avatar1.png').default})
        +advantage({label:'Комфорт',text:'Шумопоглощающие стены',icon: require('../components/advantage/Comfort.svg').default})
        +linkList({list:[{name: 'О нас', link: '#'},{name: 'Бронировние', link: '#'},{name: 'Соглашение', link: '#'}]})