include ../label/label.pug
include ../field/field.pug
include ../button/button.pug
mixin orderer(obj)
  -const baseClass = 'orderer'
  div(class=`${baseClass}`)
    div(class=`${baseClass}__header`)
      h1(class=`h1 ${baseClass}__title`)
        span(class=`${baseClass}__number-sign`) № 
        span(class=`${baseClass}__number`)=obj.number 
        if (obj && obj.lux)
          span(class=`${baseClass}__lux`)  люкс 
      if (obj && obj.price)
        div(class=`${baseClass}__price-container`)
          span(class=`${baseClass}__price`)=obj.price+'₽'
          span(class=`${baseClass}__price-desc`)  в сутки
    div(class=`${baseClass}__date`)
      +label({label: 'Прибытие'})
        +field({modifier: 'date'})(type='text' placeholder='ДД.ММ.ГГГГ')
      +label({label: 'Выезд'})
        +field({modifier: 'date'})(type='text' placeholder='ДД.ММ.ГГГГ')
    +label({label: 'Гости'})(class=`${baseClass}__guests`)
      +field({modifier:'dropdown'})(type='text' placeholder='Сколько гостей')
    div(class=`count`)
      div(class=`count__row`)
        div(class=`count__desc`) 9 990₽ х 4 суток
        div(class=`count__price`) 39 960₽
      div(class=`count__row`)
        div(class=`count__desc`) Сбор за услуги: скидка 2 179₽
          span(class=`count__info`) i
        div(class=`count__price`) 0₽
      div(class=`count__row`)
        div(class=`count__desc`) Сбор за дополнительные услуги
          span(class=`count__info`) i
        div(class=`count__price`) 300₽
      div(class=`count__row count__end`)
        div(class=`count__desc`) Итого
        span(class=`count__dots`)
        div(class=`count__price`) 38 081₽
    +button({label:'Забронировать', modifier: 'order'})